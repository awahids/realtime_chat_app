<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 bg-dark text-white sidebar">
      <h2 class="p-3">Chatroom</h2>
      <ul class="list-group list-group-flush">
        <% @chatrooms.each do |chatroom| %>
          <li class="list-group-item bg-dark text-white">
            <%= link_to chatroom.name, chatroom_path(chatroom), class: 'text-white' %>
          </li>
        <% end %>
      </ul>
      <div class="p-3">
        <%= form_with(url: chatrooms_path, method: :post, local: true) do |form| %>
          <%= form.text_field :name, placeholder: "Enter chatroom name", class: "form-control" %>
          <%= form.submit "Create", class: "btn btn-primary mt-2" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <div class="chatroom-messages p-3" id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <%= render @messages %>
      </div>
      <div class="chatroom-form p-3 bg-light">
        <%= form_with(model: [@chatroom, @chatroom.messages.build], remote: true) do |form| %>
          <div class="form-group">
            <%= form.label :username, "Enter your username", class: "form-label" %>
            <%= form.text_field :username, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :content, "Enter your message", class: "form-label" %>
            <%= form.text_area :content, class: "form-control" %>
          </div>
          <%= form.submit 'Send', class: "btn btn-primary mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
