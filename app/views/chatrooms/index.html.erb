<div class="container">
  <h1 class="text-center mb-4">Chatrooms</h1>
  <div class="d-flex flex-wrap justify-content-center">
    <% @chatrooms.each do |chatroom| %>
      <div class="m-2">
        <%= link_to chatroom.name, chatroom_path(chatroom), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
